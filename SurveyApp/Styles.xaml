<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--Colors-->
    <Color x:Key="SkyBlueColor">#2ba0da</Color>
    <Color x:Key="IntermediateColor">#2bdead</Color>
    <Color x:Key="GreenSberColor">#2bde6d</Color>
    <Color x:Key="BorderColor">#40FFFFFF</Color>
    <Color x:Key="PopupButtonColor">#1daf43</Color>

    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0.5,1" EndPoint="0.5,0">
        <GradientStop Color="{StaticResource SkyBlueColor}" Offset="0"/>
        <GradientStop Color="{StaticResource IntermediateColor}" Offset="0.5"/>
        <GradientStop Color="#68e3b2" Offset="0.7"/>
        <GradientStop Color="{StaticResource GreenSberColor}" Offset="1"/>
    </LinearGradientBrush>
    
    <!--General font-->
    <FontFamily x:Key="GeneralFont">Segoe UI</FontFamily>

    <!--Global-->
    <Style TargetType="TextBlock" x:Key="GlobalTextBlock">
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="FontFamily" Value="{StaticResource GeneralFont}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="TextBlockForTitle" BasedOn="{StaticResource GlobalTextBlock}">
        <Setter Property="FontSize" Value="50"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    
    <Style TargetType="TextBlock" x:Key="TextStyleForSurvey" BasedOn="{StaticResource GlobalTextBlock}">
        <Setter Property="FontSize" Value="25"/>
        <!--<Setter Property="Margin" Value="0,0,0,15"/>-->
    </Style>

    <Style TargetType="TextBlock" x:Key="TextStyleForPoints" BasedOn="{StaticResource GlobalTextBlock}">
        <Setter Property="FontSize" Value="18"/>
    </Style>

    <Style TargetType="Button" x:Key="ButtonStyle">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="FontSize" Value="40"/>
        <Setter Property="Padding" Value=" 40"/>
        <Setter Property="FontFamily" Value="{StaticResource GeneralFont}"/>
        <Setter Property="Foreground" Value="#2ba0da"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="30"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}">
                        <ContentPresenter HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"
                                  Margin="{TemplateBinding Padding}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#d4d4d4"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Border" x:Key="BorderStyle">
        <Setter Property="Width" Value="720"/>
        <Setter Property="Padding" Value="30"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="CornerRadius" Value="50"/>
        <Setter Property="BorderThickness" Value="7"/>
        <Setter Property="BorderBrush" Value="#40FFFFFF"/>
        <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
    </Style>

    <Style TargetType="Slider" x:Key="SliderStyle">
        <Setter Property="Minimum" Value="1"/>
        <Setter Property="Maximum" Value="3"/>
        <Setter Property="Value" Value="2"/>
        <Setter Property="TickPlacement" Value="Both"/>
        <Setter Property="TickFrequency" Value="1"/>
        <Setter Property="IsSnapToTickEnabled" Value="True"/>
        <Setter Property="AutoToolTipPlacement" Value="None"/>
        <Setter Property="AutoToolTipPrecision" Value="0"/>
    </Style>

    <Style TargetType="TextBox" x:Key="TextBoxStyle">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="50"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="40, 0"/>
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border CornerRadius="40"
                    Background="{TemplateBinding Background}"
                    BorderBrush="#dddddd"
                    BorderThickness="3">
                        <ScrollViewer x:Name="PART_ContentHost"
                              Padding="{TemplateBinding Padding}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="CheckBox" x:Key="CheckBoxStyle">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="IsChecked" Value="False"/>
        <Setter Property="IsThreeState" Value="False"/>
        <Setter Property="FontSize" Value="45"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
    <!--MainWindow-->
    
    <!--PopupWindows-->
    <SolidColorBrush x:Key="PopupBackgroundColor" Color="#ededed"/>

    <Style TargetType="Border" x:Key="PopupBorderBlockStyle">
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="BorderThickness" Value="5"/>
        <Setter Property="Background" Value="{StaticResource PopupBackgroundColor}"/>
    </Style>
    
    <Style TargetType="TextBlock" x:Key="PopupTitleFontStyle">
        <Setter Property="FontFamily" Value="{StaticResource GeneralFont}"/>
        <Setter Property="FontSize" Value="27"/>
        <Setter Property="Margin" Value="40, 20, 40 0"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="PopupTextBlockStyle">
        <Setter Property="Margin" Value="40, 10"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style TargetType="Button" x:Key="PopupButtonStyle" BasedOn="{StaticResource ButtonStyle}">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Padding" Value="100, 10"/>
        <Setter Property="Margin" Value="20"/>
        <Setter Property="Background" Value="#1daf43"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Content" Value="Закрыть"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#26c951" />
            </Trigger>
        </Style.Triggers>
    </Style>
    
    
    
</ResourceDictionary>