<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <LinearGradientBrush x:Key="forBackground" StartPoint="0.5,1" EndPoint="0.5,0">
        <GradientStop Color="#2ba0da" Offset="0"/>
        <GradientStop Color="#2bdead" Offset="0.5"/>
        <GradientStop Color="#2bde6d" Offset="1"/>
    </LinearGradientBrush>

    <Style TargetType="Border" x:Key="BorderStyle">
        <Setter Property="Padding" Value="30"/>
        <Setter Property="CornerRadius" Value="50"/>
        <Setter Property="BorderThickness" Value="7"/>
        <Setter Property="Padding" Value="30"/>
        <Setter Property="BorderBrush" Value="#40FFFFFF"/>
    </Style>
    
    <Style TargetType="Slider" x:Key="SliderStyle">
        <Setter Property="Minimum" Value="1"/>
        <Setter Property="Maximum" Value="3"/>
        <Setter Property="Value" Value="2"/>
        <Setter Property="TickPlacement" Value="Both"/>
        <Setter Property="TickFrequency" Value="1"/>
        <Setter Property="IsSnapToTickEnabled" Value="True"/>
        <Setter Property="AutoToolTipPlacement" Value="None"/>
        <Setter Property="AutoToolTipPrecision" Value="0"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="GlobalTextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="TextStyleForSurvey">
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="20"/>
        
    </Style>

    <Style TargetType="TextBlock" x:Key="TextStyleForPoints">
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="Foreground" Value="White"/>
        
        <Setter Property="Margin" Value="20"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style TargetType="Button" x:Key="ButtonStyle">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="FontSize" Value="40"/>
        <Setter Property="Padding" Value=" 40"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Foreground" Value="#2ba0da"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="30"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}">
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="TextBox" x:Key="TextBoxStyle">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="40, 0"/>
        <Setter Property="FontSize" Value="90"/>
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border CornerRadius="70"
                        Background="{TemplateBinding Background}"
                        BorderBrush="#dddddd"
                        BorderThickness="5">
                        <ScrollViewer x:Name="PART_ContentHost"
                                  Padding="{TemplateBinding Padding}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="CheckBox" x:Key="CheckBoxStyle">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="IsChecked" Value="False"/>
        <Setter Property="IsThreeState" Value="False"/>
        <Setter Property="FontSize" Value="45"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
</ResourceDictionary>