<Window x:Class="SurveyApp.PopupWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:io="clr-namespace:System.IO;assembly=mscorlib"
        xmlns:local="clr-namespace:SurveyApp"
        mc:Ignorable="d"
        Title="согласие на обработку персональных данных" 
        MaxHeight="700" MaxWidth="400" Background="#ededed"
        Width="300" Height="300">
    <Window.Resources>
        <ObjectDataProvider x:Key="TextFileProvider" 
                          ObjectType="{x:Type io:File}"
                          MethodName="ReadAllText">
            <ObjectDataProvider.MethodParameters>
                <sys:String>C:\dotnet\SurveyApp\SurveyApp\тексты\Personal.txt</sys:String>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="0">
            <TextBlock TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       Text="Согласие на обработку персональных данных"
                       FontFamily="Segoe UI" FontSize="30" Foreground="Black"
                       FontWeight="Bold"
                       />
        </Viewbox>
        <Viewbox Grid.Row="1" Margin="0,0,0,10" >
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="-10" Width="736">
                <TextBlock  Text="{Binding Source={StaticResource TextFileProvider}}" 
                            Foreground="Black" FontSize="14"
                            Style="{StaticResource TextStyleForPoints}">

                </TextBlock>
            </ScrollViewer>
        </Viewbox>
        <Viewbox Grid.Row="2" >
            <Button Content="Закрыть" 
                    Width="120" 
                    BorderBrush="#1daf43" 
                    Background="#1daf43"
                   
                    Foreground="White"
                    FontFamily="Segoe UI"/>
        </Viewbox>
    </Grid>
</Window>