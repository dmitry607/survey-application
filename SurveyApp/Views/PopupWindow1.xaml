<Window x:Class="SurveyApp.Views.PopupWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:io="clr-namespace:System.IO;assembly=mscorlib"
        xmlns:vm="clr-namespace:SurveyApp.ViewModels"
        xmlns:local="clr-namespace:SurveyApp"
        mc:Ignorable="d"
        Width="Auto" Height="Auto" MaxWidth ="750" MaxHeight="850"
        SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" 
        WindowStyle="None">

    <!--<Window.Resources>
        <ObjectDataProvider x:Key="TextFileProvider" 
                            ObjectType="{x:Type io:File}"
                            MethodName="ReadAllText">
            <ObjectDataProvider.MethodParameters>
                <sys:String>C:\dotnet\SurveyApp\SurveyApp\bin\Debug\net8.0-windows\texts\Policy.txt</sys:String>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>-->
    <Window.DataContext>
        <vm:PopupViewModel/>
    </Window.DataContext>
    <Window.Template>
        <ControlTemplate TargetType="Window">
            <Border Style="{StaticResource PopupBorderBlockStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Политика в отношении обработки персональных данных АНО ДПО «Корпоративный университет Сбербанка»"
                               Style="{StaticResource PopupTitleFontStyle}"
                               MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"/>

                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto">
                        <TextBlock Text="{Binding PolicyText}" 
                                   Style="{StaticResource PopupTextBlockStyle}"/>
                    </ScrollViewer>

                    <Button Grid.Row="2" 
                            Style="{StaticResource PopupButtonStyle}"
                            Click="Button_Click"/>
                </Grid>
            </Border>
        </ControlTemplate>
    </Window.Template>
</Window>
